name: rrd-transport
version: 0.1.0
synopsis: Programs for testing shared-memory communication protocols
obuild-ver: 1

library rrd_transport
  src-dir: lib
  modules: rrd_protocol, rrd_rpc, rrd_protocol_v1, rrd_protocol_v2, rrd_io, rrd_reader, rrd_writer
  build-deps: bigarray, cstruct, xenctrl, xcp-rrdd-plugin, crc

executable reader
  src-dir: test
  main: reader.ml
  build-deps: cmdliner, bigarray, threads, xenctrl, xcp-rrd, xcp-rrdd-plugin, rrd_transport

executable writer
  src-dir: test
  main: writer.ml
  build-deps: cmdliner, bigarray, threads, xenctrl, xcp-rrd, xcp-rrdd-plugin, rrd_transport
