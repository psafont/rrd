OCAMLPACKS    = stdext xs
OCAML_LIBS    += ../xenops/xenops ../netdev/netdev
OCAMLINCLUDES += ../xenops ../netdev
OCamlProgram(xiu, xiu)
OCamlDocProgram(xiu, xiu)

.PHONY: clean
clean:
	rm -rf $(CLEAN_OBJS) xiu

.PHONY: install
install:
	mkdir -p $(DESTDIR)/opt/xensource/libexec
	$(IPROG) xiu $(DESTDIR)/opt/xensource/libexec/

.PHONY: sdk-install
sdk-install:
	mkdir -p $(DESTDIR)/opt/xensource/libexec
	$(IPROG) xiu $(DESTDIR)/opt/xensource/libexec/
